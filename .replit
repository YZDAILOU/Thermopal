modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["iana-etc", "openssl", "postgresql", "sqlite"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn main:app --worker-class eventlet -w 1 --bind 0.0.0.0:5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Run WBGT App"
author = 45120531
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
integrations = ["javascript_database==1.0.0"]
